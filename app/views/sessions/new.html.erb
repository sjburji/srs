<h3>Sign in</h3>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'simple' %>
  </div>
  <br/>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'simple' %>
  </div>
  <br/>

  <span class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </span>
  <br/>
  
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
  <br/>
<% end %>

<span>
  <%= link_to "Forgot password?", new_password_reset_path %> | <%= link_to "New user?", signup_path %>
</span>