<h3>Sign in</h3>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'simple' %>
  </div>
  <br/>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'simple' %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>