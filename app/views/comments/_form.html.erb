<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h4>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <span>
      <%= f.text_field :content, :class => 'simple', :maxlength => '140', :style => 'width:450px;' %>
    </span>

    <%= f.hidden_field :post_id %>
    <%= f.hidden_field :user_id %>

    <span class="actions">
      <%= f.submit 'Comment', :post_id => @comment.post_id %>
      <br/>
      <span style="font-size:10px;">( 140 characters max )</span>
    </span>
  </div>
  
    
<% end %>
