<% @cms.each do |cm| %>
  <p class="cms_content">
    <span class="span-3">
      <b>Section</b>
    </span>
    <%= cm.section %><br/>

    <span class="span-3">
      <b>Active</b>
    </span>
    <%= cm.active %><br/>

    <span class="span-3">
      <b>Created At</b>
    </span>
    <%= cm.created_at.strftime('%d %B %Y') %><br/>

    <span class="span-3">
      <b>Updated At</b>
    </span>
    <%= cm.updated_at.strftime('%d %B %Y') %><br/>

    <br/><br/>
    <span class="span-3">
      <b>Content</b>
    </span>
    
    <%= cm.content.html_safe %>
    <br/>

    <div class="span-3"><%= link_to 'Show Details', cm %></div>
    <div class="span-3"><%= link_to 'Edit', edit_cm_path(cm) %></div>
  </p>
  <hr/>
<% end -%>