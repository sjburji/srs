<h4>Posts for <%= @posts.first.created_at.strftime('%B %Y') %></h4>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Content</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.summary %></td>
    <td><%= post.content %></td>    
  </tr>
<% end %>
</table>