<%= javascript_tag :defer => 'defer' do -%>
  $(document).ready(function(){
     $.get('/getRecentPosts', function(data){
         $('#recent_posts_div').html(data);

         return false;
     });

     $.get('/getHomePagePosts', function(data){
         $('#home_page_posts_div').html(data);

         return false;
     });
  });
<% end -%>

<% @tabs.each do |tab| %>
  <span class="home_tabs" id="home_tabs">
    <%= link_to tab.name, '', :class => "span-2 round",
      :tab_id => tab.id, :id => 'tab_id_' + tab.id.to_s %>
  </span>
<% end -%>

<hr style="background-color: #fff;"/>

<hr/>

<div>
  <div style="width: 65%; float: left">
    <div id="home_page_posts_div"></div>
  </div>

  <div style="width: 30%; float: right; ">
    <div class="recent_posts_header">
      Recent Posts
      <br/>
    </div>

    <div id="recent_posts_div" class="recent_posts_body"></div>
    <br/>
    <hr/>

    <hr style="background-color: #fff;"/>
    <div class="archive">
      Archive
    </div>
  </div>
</div>