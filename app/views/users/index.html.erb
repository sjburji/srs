<h3>Users</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= button_to "Delete", { :action => "destroy", :id => user.id },
          :confirm => "Are you sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>